@using iHealth.Core.Application.ViewModels.UserViewModels;
@model List<UserViewModel>
<div class="container-fluid">
    <div class="row">
        <div class="row">
            <div class="col-3 offset-9">
                <a asp-action="AddUser" class="btn btn-outline-primary">Add User</a>
            </div>
        </div>
        <div class="row">
            <br />
        </div>
        <div class="row">
            @if (!(Model.Count == 0))
                @foreach (var user in Model)
                {
                    <div class="col-lg-4 col-md-6 col-sm-6">
                        <div class="card" style="width: 18rem; var(--bs-card-border-width) solid var(--bs-card-border-color) solid #DEE2E6;">
                            <div class="card-body">
                                <h5 class="card-title">@user.Name @user.LastName</h5>

                                <ol class="list-group list-group-numbered" style="list-style-type: none;">

                                    <li class="list-group-item d-flex justify-content-between align-items-start">
                                        <div class="ms-2 me-auto">
                                            <div class="fw-bold">Username</div>
                                            <p>@user.UserName</p>
                                        </div>
                                    </li>

                                    <li class="list-group-item d-flex justify-content-between align-items-start">
                                        <div class="ms-2 me-auto">
                                            <div class="fw-bold">Email</div>
                                            @user.Email
                                        </div>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-start">
                                        <div class="ms-2 me-auto">
                                            <div class="fw-bold">Role</div>
                                            @{
                                                if(user.Role == 0)
                                                {
                                                    <p>Admin</p>
                                                }
                                                else
                                                {
                                                    <p>Secretary</p>
                                                }
                                            }
                                        </div>
                                    </li>
                                </ol>
                            </div>
                            <div class="card-footer">
                                <div class="btn-group" style="width:100%">
                                    <a asp-controller="User" asp-action="UpdateUser" asp-route-Id="@user.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                                    <a asp-controller="User" asp-action="DeleteUser" asp-route-Id="@user.Id" class="btn btn-sm btn-outline-danger">Delete</a>
@*                                     <a asp-controller="User" asp-action="Details" asp-route-Id="@user.Id" class="btn btn-sm btn-outline-primary">Details</a>
 *@                                </div>
                            </div>
                        </div>
                        <br />
                    </div>
                }
        </div>
    </div>
</div>
