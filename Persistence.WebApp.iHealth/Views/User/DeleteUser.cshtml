@using iHealth.Core.Application.ViewModels.UserViewModels;
@model SaveUserViewModel;

<form asp-action="DeleteUser" asp-controller="User" method="post">
    <h1>
        Are you sure you want to delete this user?
    </h1>
    <label asp-for="Name">Name</label><br />
    <input asp-for="Name" placeholder="@Model.Name" readonly/><br />
    <span asp-validation-for="Name"></span>
    <br />

    <label asp-for="LastName">Last Name</label><br />
    <input asp-for="LastName" placeholder="@Model.LastName" readonly /><br />
    <span asp-validation-for="LastName"></span>
    <br />

    <label asp-for="UserName">Username</label><br />
    <input asp-for="UserName" placeholder="@Model.UserName" readonly /><br />
    <span asp-validation-for="UserName"></span>
    <br />

    <label asp-for="Email">Email</label><br />
    <input asp-for="Email" placeholder="@Model.Email" readonly /><br />
    <span asp-validation-for="Email"></span>
    <br />
    <div class="row">
        <div class="col">
            <a asp-action="Index" asp-controller="User" class="btn btn-outline-warning">Cancel</a>
        </div>
        <div class="col">
            <input type="submit" value="Delete" class="btn btn-outline-danger" />

        </div>
    </div>
</form>
