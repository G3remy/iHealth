@using iHealth.Core.Application.ViewModels.DoctorViewModels;
@model List<DoctorViewModel>;
<div class="container-fluid">
    <div class="row">
        <div class="row">
            <div class="col-3 offset-9">
                <a asp-action="AddDoctor" class="btn btn-outline-primary">Add Doctor</a>
            </div>
        </div>
        <div class="row">
            <div class="col-3 offset-9">
                <br />
            </div>
        </div>
        <div class="row">
            @if (!(Model.Count == 0))
                @foreach (var doctor in Model)
                {
                    <div class="col-lg-4 col-md-6 col-sm-6">
                        <div class="card" style="width: 18rem; var(--bs-card-border-width) solid var(--bs-card-border-color) solid #DEE2E6;">
                            <a asp-controller="Doctor" asp-action="Details" asp-route-Id="@doctor.Id" class="btn btn-top-card">
                                <img src="@doctor.ImageURL" alt="Doctor image" class="img img-fluid" style="width: 100%;">
                            </a>

                            <div class="card-body">

                                <h5 class="card-title">@doctor.Name @doctor.LastName</h5>

                                <ol class="list-group list-group-numbered" style="list-style-type: none;">
                                        
                                    <li class="list-group-item d-flex justify-content-between align-items-start">
                                        <div class="ms-2 me-auto">
                                            <div class="fw-bold">Identification Card</div>
                                            @doctor.IdCard
                                        </div>
                                    </li>

                                        

                                    <li class="list-group-item d-flex justify-content-between align-items-start">
                                        <div class="ms-2 me-auto">
                                            <div class="fw-bold">Email</div>
                                            @doctor.Email
                                        </div>
                                    </li>

                                    <li class="list-group-item d-flex justify-content-between align-items-start">
                                        <div class="ms-2 me-auto">
                                            <div class="fw-bold">Phone</div>
                                            @doctor.Phone
                                        </div>
                                    </li>

                                        

                                    <li class="list-group-item d-flex justify-content-between align-items-start">
                                        <div class="ms-2 me-auto">
                                            <div class="fw-bold">Card Id</div>
                                            @doctor.IdCard
                                        </div>
                                    </li>

                                        

                                </ol>
                            </div>
                            <div class="card-footer">
                                <div class="btn-group" style="width:100%">
                                    <a asp-controller="Doctor" asp-action="UpdateDoctor" asp-route-Id="@doctor.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                                    <a asp-controller="Doctor" asp-action="DeleteDoctor" asp-route-Id="@doctor.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                                </div>
                            </div>
                        </div>
                        <br />
                    </div>
                }
        </div>
    </div>
</div>
