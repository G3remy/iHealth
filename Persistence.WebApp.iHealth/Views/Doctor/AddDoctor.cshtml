@using iHealth.Core.Application.ViewModels.DoctorViewModels;
@model SaveDoctorViewModel;
<form asp-action="AddDoctor" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label asp-for="Image">Upload Image:</label>
        <input asp-for="Image" class="form-control" id="Image" type="file" required>
        <span class="text-danger" asp-validation-for="Image"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" class="form-control" id="Name" >
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName">Last Name:</label>
        <input asp-for="LastName" class="form-control" id="LastName" >
        <span class="text-danger" asp-validation-for="LastName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email">Email:</label>
        <input asp-for="Email" class="form-control" id="Email" >
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="Phone">Phone:</label>
        <input asp-for="Phone" class="form-control" id="Phone" >
        <span class="text-danger" asp-validation-for="Phone"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdCard">Identification Card:</label>
        <input asp-for="IdCard" class="form-control" id="IdCard">
        <span class="text-danger" asp-validation-for="IdCard"></span>
    </div>
    
    <div class="row">
        <div class="col">
            <a asp-action="Index" asp-controller="Doctor" class="btn btn-outline-warning">Cancel</a>
        </div>
        <div class="col">
            <input type="submit" class="btn btn-outline-success" value="Create" />
        </div>
    </div>
</form>
