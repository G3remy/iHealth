@using iHealth.Core.Application.ViewModels.PatientViewModels;
@model SavePatientViewModel;
<div class="card" style="width:50%">
    <div class="card-header">
        <div class="card-title">
            <h1>Are you sure you wanna delete this patient?</h1>

        </div>
    </div>
    <div class="card-body">
        <form asp-action="DeletePatient" method="post">
            <div class="form-group">
                <label asp-for="Name">Name:</label>
                <input asp-for="Name" class="form-control" id="Name" placeholder="@Model.Name" readonly>
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName">Last Name:</label>
                <input asp-for="LastName" class="form-control" id="LastName" placeholder="@Model.LastName" readonly>
                <span class="text-danger" asp-validation-for="LastName"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email">Email:</label>
                <input asp-for="Email" class="form-control" id="Email" placeholder="@Model.Email" readonly>
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone">Phone:</label>
                <input asp-for="Phone" class="form-control" id="Phone" placeholder="@Model.Phone" readonly>
                <span class="text-danger" asp-validation-for="Phone"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCard">Identification Card:</label>
                <input asp-for="IdCard" class="form-control" id="IdCard" placeholder="@Model.IdCard" readonly>
                <span class="text-danger" asp-validation-for="IdCard"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthDate">BirthDate:</label>
                <input asp-for="BirthDate" type="date" class="form-control" id="BirthDate" placeholder="@Model.BirthDate" readonly>
                <span class="text-danger" asp-validation-for="BirthDate"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address">Address:</label>
                <input asp-for="Address" type="text" class="form-control" id="Address" placeholder="@Model.Address" readonly>
                <span class="text-danger" asp-validation-for="Address"></span>
            </div>

            <div class="form-group">
                <label asp-for="Smoker"> Are you smoker? (if yes, check up)</label>
                <input asp-for="Smoker" type="checkbox" id="Smoker" style="width:auto" placeholder="@Model.Smoker" readonly>
                <span class="text-danger" asp-validation-for="Smoker"></span>
            </div>
            <div class="form-group">
                <label asp-for="Allergies"> Do you have allergies? (if yes, check up)</label>
                <input asp-for="Allergies" type="checkbox" id="Allergies" style="width:auto" placeholder="@Model.Allergies" readonly>
                <span class="text-danger" asp-validation-for="Allergies"></span>
            </div>

        </form>
        <div class="card-footer">
            <div class="row">
                <div class=col>
                    <a class="btn btn-outline-info" asp-action="Index" asp-controller="Patient">Cancel</a>
                </div>
                <div class=col>
                    <input type="submit" value="Delete" class="btn btn-outline-danger" /><br />
                </div>
            </div>
        </div>
    </div>
</div>

