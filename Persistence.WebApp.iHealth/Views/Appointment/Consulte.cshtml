@using iHealth.Core.Application.ViewModels.AppointmentViewModel;
@model ConsultateViewModel;

<form asp-action="Consulte" method="post">
    <div class="card">
        <div class="card-body">
            <input asp-for="@Model.Appointment.Id" value="@Model.Appointment.Id" hidden>

            @for(int i = 0; i<Model.LabTestsAvailable.Count; i++)
            {
                <input type="checkbox" asp-for="@Model.LabTestsIdChosen[i]">
                <label>@Model.LabTestsAvailable[i].Name</label>
                <br />
            }
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col">
            <a asp-action="Index" asp-controller="Appointment" class="btn btn-outline-warning">Cancel</a>
        </div>
        <div class="col">
            <input type="submit" value="Consulte" class="btn btn-outline-success" />
        </div>
    </div>
</form>