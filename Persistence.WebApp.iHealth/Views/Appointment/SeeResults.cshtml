@using iHealth.Core.Application.ViewModels.LabResultViewModel;
@model List<LabResultViewModel>;
<style>
    table, th, td {
        border: 1px solid black;
        text-align:center;
    }

    table{
        table-layout:fixed
    }

    th, td {
        width: 100px;
    }
</style>
<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <table style="border:solid">
                <thead>
                    <tr>
                        <td style="width:10px">Name</td>
                        <td>Result</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var labresult in Model)
                    {
                        <tr>
                            <td style="width:50px">@labresult.LabTest.Name</td>
                            <td>
                                @labresult.Result
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
            <a asp-action="Index" class="btn btn-outline-warning" asp-controller="Appointment">Go back</a>
        </div>
    </div>
</div>